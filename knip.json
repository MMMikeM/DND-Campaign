{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "project": [
        "app/**/*.{ts,tsx}"
      ]
    },
    "packages/react": {
      "entry": [
        "app/root.tsx",
        "app/routes.ts",
        "app/routes/**/*.{ts,tsx}",
        "vite.config.ts"
      ],
      "project": [
        "app/**/*.{ts,tsx}",
        "vite.config.ts"
      ]
    },
    "packages/mcp": {
      "entry": [
        "src/index.ts"
      ],
      "project": [
        "src/**/*.ts"
      ]
    },
    "packages/shared": {
      "entry": [
        "src/index.ts",
        "src/db/index.ts",
        "src/proxy.ts",
        "drizzle.config.ts"
      ],
      "project": [
        "src/**/*.{ts,js}",
        "drizzle.config.ts"
      ]
    }
  },
  "ignore": [
    "**/dist/**",
    "**/build/**",
    "**/.turbo/**",
    "**/node_modules/**",
    "**/*.d.ts",
    "packages/react/app/components/ui/**",
    "**/*.test.data.ts",
    "**/*.test.ts"
  ],
  "ignoreDependencies": [
    "@biomejs/biome"
  ],
  "includeEntryExports": true
} 