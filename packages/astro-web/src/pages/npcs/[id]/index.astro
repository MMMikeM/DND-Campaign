---
import DarkLayout from '../../../layouts/DarkLayout.astro';
import { db } from '../../../lib/db';
import { npcs } from '@tome-keeper/shared';
import { eq } from 'drizzle-orm';
import NPCDetail from '../../../components/NPCDetail';
import type { NPC } from '../../../types/models';

export const prerender = false;

const { id } = Astro.params;
const npc = await db.select().from(npcs).where(eq(npcs.id, Number(id))).get();

if (!npc) {
	return Astro.redirect('/npcs');
}

// Transform the database result to match our NPC type
const formattedNpc: NPC = {
	...npc,
	// Parse JSON string fields if they're stored as strings
	descriptions: Array.isArray(npc.descriptions) ? npc.descriptions : JSON.parse(npc.descriptions || '[]'),
	personalityTraits: Array.isArray(npc.personalityTraits) ? npc.personalityTraits : JSON.parse(npc.personalityTraits || '[]'),
	inventory: Array.isArray(npc.inventory) ? npc.inventory : JSON.parse(npc.inventory || '[]'),
	dialogue: Array.isArray(npc.dialogue) ? npc.dialogue : JSON.parse(npc.dialogue || '[]'),
};
---

<DarkLayout title={npc.name}>
	<div class="mb-6 flex items-center">
		<a href="/npcs" class="flex items-center text-slate-400 hover:text-blue-400 transition-colors mr-4">
			<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
				<path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
			</svg>
			Back to NPCs
		</a>
		<h1 class="text-2xl font-semibold text-slate-100">NPC Details</h1>
	</div>

	<NPCDetail client:load npc={formattedNpc} />
</DarkLayout>

<script>
	// Any client-side scripts if needed
</script> 