{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "../../shared/**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "rootDirs": [
      "src",
      "../../shared"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@shared/*": [
        "../../shared/*"
      ]
    }
  }
}