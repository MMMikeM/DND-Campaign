---
import EntityCard from "@components/cards/EntityCard.astro";
import EntityListing from "@components/EntityListing.astro";
import { getAllFactions } from "@entities";
import Layout from "@layout";


const factions = await getAllFactions()
---

<Layout title="Factions">
  <EntityListing title="Factions">
    {factions.map(faction => <EntityCard entity={faction} entityType="faction" />)}
  </EntityListing>
</Layout>