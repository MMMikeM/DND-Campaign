---
import Layout from '../../layouts/Layout.astro';
import { getAllNpcs } from '../../db/entities';
import EntityListing from '../../components/EntityListing.astro';
import NPCCard from '../../components/cards/NPCCard.astro';

const allNpcs = await getAllNpcs();
---

<Layout title="NPCs">
  <EntityListing
    title="NPCs">
  {allNpcs.map(npc => 
      <NPCCard
        npc={npc} />)}
  </EntityListing>
</Layout>