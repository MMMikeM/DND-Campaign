---
import Layout from '../../layouts/Layout.astro';
import { getAllNpcs } from '../../db/entities';
import EntityListing from '../../components/EntityListing.astro';
import EntityCard from '../../components/cards/EntityCard.astro';

const allNpcs = await getAllNpcs();
---

<Layout title="NPCs">
  <EntityListing
    title="NPCs">
  {allNpcs.map(npc => 
      <EntityCard
        entity={npc}
        entityType="npc" />)}
  </EntityListing>
</Layout>