---
import Layout from '../../layouts/Layout.astro';
import { getAllQuests } from '../../db/entities';
import QuestCard from '../../components/cards/QuestCard.astro';
import EntityListing from '../../components/EntityListing.astro';

const allQuests = await getAllQuests()
---

<Layout title="Quests">
  <EntityListing
    title="NPCs">
  {allQuests.map(quest => 
      <QuestCard
        quest={quest} />)}
  </EntityListing>
</Layout>