---
import Layout from "../../layouts/Layout.astro";
import { getAllQuests } from "../../db/entities";
import EntityCard from "../../components/cards/EntityCard.astro";
import EntityListing from "../../components/EntityListing.astro";

const allQuests = await getAllQuests();
---

<Layout title="Quests">
  <EntityListing title="Quests">
    {allQuests.map((quest) => <EntityCard entity={quest} entityType="quest" />)}
  </EntityListing>
</Layout>
