---
import Chip, { type Props as ChipProps } from "./Chip.astro";

interface Props {
  items: (ChipProps & { item?: string | null })[];
}

const { items } = Astro.props as Props;
---

<div class="flex flex-row gap-2">
  {
    items.map((item) => (
      <Chip color={item.color} icon={item.icon}>
        {item.item}
      </Chip>
    ))
  }
</div>
