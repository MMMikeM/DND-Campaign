---
interface Props {
  id: number;
  entityType: string;
  name: string;
}

const { id, name, entityType } = Astro.props;
---

<div class="bg-white p-6 rounded-lg border border-gray-200 shadow-md transition-all duration-300 hover:shadow-lg hover:border-indigo-300 group relative">
  <div class="space-y-4">
    <slot />
    
    <div class="mt-3 flex justify-end gap-4">
      <slot name="actions">
        <a 
          href={`/${entityType}s/${name}`} 
          class="inline-flex items-center text-sm font-medium text-indigo-500 group-hover:text-indigo-700 transition-colors duration-300"
        >
          View Details
          <svg 
            class="ml-1 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M9 5l7 7-7 7"
            />
          </svg>
        </a>
        <button
          type="button"
          data-entity-id={id}
          data-entity-type={entityType}
          class="inline-flex items-center text-sm font-medium text-red-500 hover:text-red-700 transition-colors duration-300 delete-entity"
        >
          Delete
          <svg 
            class="ml-1 w-4 h-4" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
            />
          </svg>
        </button>
      </slot>
    </div>
  </div>
</div>