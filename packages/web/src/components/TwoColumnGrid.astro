---
interface Props {
  title: string;
}

const { title }: Props = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-6xl mx-auto">
  <div class="col-span-3 flex flex-col gap-3">
    <h1
      class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl mb-4 md:mb-0"
    >
      {title}
    </h1>
    <div class="flex gap-2">
      <slot name="header" />
    </div>
  </div>

  <!-- Left Column -->
  <div class="flex flex-col gap-4 col-span-2">
    {
      Astro.slots.has("left-column") ? (
        <slot name="left-column" />
      ) : (
        <div class="flex flex-col items-center justify-center h-64 bg-gray-50 rounded-md border-2 border-dashed border-gray-300 text-gray-400">
          <p>Left Column Content</p>
          <p class="text-sm">Use the "left-column" slot to add content here</p>
        </div>
      )
    }
  </div>

  <!-- Right Column -->
  <div class="flex flex-col gap-4">
    {
      Astro.slots.has("right-column") ? (
        <slot name="right-column" />
      ) : (
        <div class="flex flex-col items-center justify-center h-64 bg-gray-50 rounded-md border-2 border-dashed border-gray-300 text-gray-400">
          <p>Right Column Content</p>
          <p class="text-sm">Use the "right-column" slot to add content here</p>
        </div>
      )
    }
  </div>
</div>

<slot name="footer" />
