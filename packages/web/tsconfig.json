{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@layout": [
        "./layouts/Layout.astro"
      ],
      "@entities": [
        "./db/entities.ts"
      ],
    }
  }
}