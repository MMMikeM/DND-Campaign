{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleDetection": "auto",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "rootDirs": [
      ".",
      "../shared/src"
    ],
    "types": [
      "node"
    ],
    "baseUrl": "..",
    "paths": {
      "@shared/*": [
        "shared/src/*"
      ],
      "@server/*": [
        "mcp-server/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../shared/src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}