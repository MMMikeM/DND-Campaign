{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "preserveSymlinks": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@tome-keeper/shared": [
        "../shared/dist"
      ],
      "@tome-keeper/shared/*": [
        "../shared/dist/*"
      ]
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}