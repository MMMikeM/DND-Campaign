{
  "name": "@tome-keeper/mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for DND Campaign Management System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc -b",
    "dev": "NODE_OPTIONS='--env-file=.env' tsx watch src/index.ts",
    "dev:sse": "tsx --watch --env-file=.env.sse src/index.ts",
    "start": "NODE_OPTIONS='--env-file=.env' tsx src/index.ts",
    "start:sse": "NODE_OPTIONS='--env-file=.env.sse' tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "dnd",
    "campaign",
    "mcp",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@tome-keeper/shared": "workspace:*",
    "arktype": "^2.1.9",
    "js-yaml": "^4.1.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.17.24",
    "dotenv": "^16.4.7",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
