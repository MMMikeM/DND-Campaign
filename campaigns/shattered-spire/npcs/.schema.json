{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "NPC Schema",
    "description": "Schema for NPC definition files in the Shattered Spire campaign",
    "type": "object",
    "required": ["title", "version", "description", "npcs"],
    "properties": {
        "title": {
            "type": "string",
            "description": "The title of the NPC collection"
        },
        "version": {
            "type": "string",
            "description": "Version number of the NPC file"
        },
        "description": {
            "type": "string",
            "description": "Description of the NPC collection"
        },
        "npcs": {
            "type": "array",
            "description": "Array of NPC objects",
            "items": {
                "type": "object",
                "required": ["name", "race", "gender", "occupation", "description", "personality", "background", "motivation", "secret", "stats"],
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Unique identifier for the NPC"
                    },
                    "name": {
                        "type": "string",
                        "description": "Name of the NPC"
                    },
                    "race": {
                        "type": "string",
                        "description": "Race of the NPC"
                    },
                    "gender": {
                        "type": "string",
                        "description": "Gender of the NPC"
                    },
                    "occupation": {
                        "type": "string",
                        "description": "Primary occupation of the NPC"
                    },
                    "role": {
                        "type": "string",
                        "description": "Role or position of the NPC"
                    },
                    "description": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Physical description and personality of the NPC"
                    },
                    "quirk": {
                        "type": "string",
                        "description": "A quirky or unusual trait of the NPC"
                    },
                    "personality": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Personality traits of the NPC"
                    },
                    "background": {
                        "type": "string",
                        "description": "Background story of the NPC"
                    },
                    "motivation": {
                        "type": "string",
                        "description": "What motivates this NPC"
                    },
                    "secret": {
                        "type": "string",
                        "description": "Secret information about the NPC"
                    },
                    "stats": {
                        "type": "string",
                        "description": "Game statistics for the NPC"
                    },
                    "quests": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["id", "description"],
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "description": "ID of the quest"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Description of the quest relationship"
                                }
                            },
                            "additionalProperties": false
                        },
                        "description": "Quests associated with this NPC"
                    },
                    "relationships": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["id", "description"],
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "description": "ID of the related character or faction"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Description of the relationship"
                                }
                            },
                            "additionalProperties": false
                        },
                        "description": "Relationships with other characters or factions"
                    },
                    "location": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["id", "description"],
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "description": "ID of the location"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Description of the NPC's presence at this location"
                                }
                            },
                            "additionalProperties": false
                        },
                        "description": "Locations where the NPC can be found"
                    },
                    "inventory": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Items in the NPC's inventory"
                    }
                },
                "additionalProperties": false
            }
        },
        "generic_npcs": {
            "description": "Generic NPCs for general use",
            "type": "object",
            "additionalProperties": false
        }
    },
    "additionalProperties": false
} 