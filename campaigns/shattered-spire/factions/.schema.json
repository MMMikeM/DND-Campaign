{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Faction Schema",
    "description": "Schema for faction definition files in the Shattered Spire campaign",
    "type": "object",
    "required": ["title", "version", "description", "factions"],
    "properties": {
        "title": {
            "type": "string",
            "description": "The title of the faction collection"
        },
        "version": {
            "type": "string",
            "description": "Version number of the faction file"
        },
        "description": {
            "type": "string",
            "description": "Description of the faction collection"
        },
        "factions": {
            "type": "object",
            "description": "Map of faction objects keyed by faction ID",
            "additionalProperties": {
                "type": "object",
                "required": ["type"],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the faction"
                    },
                    "type": {
                        "type": "string",
                        "description": "Type of faction (guild, government, criminal, etc.)"
                    },
                    "alignment": {
                        "type": "string",
                        "description": "General alignment of the faction"
                    },
                    "description": {
                        "type": "string",
                        "description": "Description of the faction"
                    },
                    "public_goal": {
                        "type": "string",
                        "description": "Publicly stated goal of the faction"
                    },
                    "true_goal": {
                        "type": "string",
                        "description": "Hidden true goal of the faction"
                    },
                    "headquarters": {
                        "type": "string",
                        "description": "Primary base of operations"
                    },
                    "territory": {
                        "type": "string",
                        "description": "Areas controlled or influenced by the faction"
                    },
                    "history": {
                        "type": "string",
                        "description": "Historical background of the faction"
                    },
                    "resources": {
                        "type": "array",
                        "description": "Assets and resources available to the faction",
                        "items": {
                            "type": "string"
                        }
                    },
                    "leaders": {
                        "type": "array",
                        "description": "Simple list of leadership NPCs",
                        "items": {
                            "type": "string"
                        }
                    },
                    "leadership": {
                        "type": "array",
                        "description": "Detailed leadership NPCs with roles and descriptions",
                        "items": {
                            "type": "object",
                            "required": ["name"],
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Name of the leader"
                                },
                                "role": {
                                    "type": "string",
                                    "description": "Role or position within the faction"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Description of the leader"
                                },
                                "secret": {
                                    "type": "string",
                                    "description": "Hidden information about the leader"
                                },
                                "stats": {
                                    "type": "string",
                                    "description": "Game statistics reference for the leader"
                                },
                                "bio": {
                                    "type": "string",
                                    "description": "Biographical information about the leader"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "members": {
                        "type": "array",
                        "description": "Faction members or member types",
                        "items": {
                            "type": "object",
                            "required": ["name"],
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Name of the member or member type"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Description of the member or member type"
                                },
                                "stats": {
                                    "type": "string",
                                    "description": "Game statistics reference for the member"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "allies": {
                        "type": "array",
                        "description": "Other factions or groups that are allies",
                        "items": {
                            "type": "string"
                        }
                    },
                    "enemies": {
                        "type": "array",
                        "description": "Other factions or groups that are enemies",
                        "items": {
                            "type": "string"
                        }
                    },
                    "quests": {
                        "type": "array",
                        "description": "Quests associated with this faction",
                        "items": {
                            "type": "string"
                        }
                    },
                    "notes": {
                        "type": "string",
                        "description": "Additional notes about the faction"
                    }
                },
                "additionalProperties": false
            }
        },
        "key_npcs": {
            "type": "object",
            "description": "Key individual NPCs not directly tied to factions",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "role": {
                        "type": "string",
                        "description": "Role or occupation of the NPC"
                    },
                    "location": {
                        "type": "string",
                        "description": "Primary location of the NPC"
                    },
                    "description": {
                        "type": "string",
                        "description": "Description of the NPC"
                    },
                    "motivation": {
                        "type": "string",
                        "description": "Primary motivation or goals of the NPC"
                    },
                    "secret": {
                        "type": "string",
                        "description": "Hidden information about the NPC"
                    },
                    "stats": {
                        "type": "string",
                        "description": "Game statistics reference for the NPC"
                    },
                    "relationships": {
                        "type": "array",
                        "description": "Relationships with other entities",
                        "items": {
                            "type": "string"
                        }
                    },
                    "quests": {
                        "type": "array",
                        "description": "Quests associated with this NPC",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
} 